  </view>
  <view class="line"></view>

  <view class="item">
    <view class="icon">
      <image src="../../images/icon/grzx/cxfw.jpg" style="width:22px;height:21px"></image>
    </view>
    <view class="itemName">
      <view>出行服务</view>
    </view>
    <view class="right">
      <text class="opr">正晚点/时刻表</text>
    </view>
  </view>
  <view class="hr"></view>

  <view class="item">
    <view class="icon">
      <image src="../../images/icon/grzx/yqhy.jpg" style="width:22px;height:21px"></image>
    </view>
    <view class="itemName">
      <view>邀请好友</view>
    </view>
    <!--点击该导航就会进入抢票界面，绑定grabTicket事件-->
